<%= form_with(url: login_path, class: 'contents', method: :post) do |f| %>
  <div class="my-5">
    <%= f.label :email %><br />
    <%= f.text_field :email, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="my-5">
    <%= f.label :password %><br />
    <%= f.password_field :password, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>
  <div class="inline">
    <%= f.submit "ログイン", class: "btn btn-success" %>
  </div>
<% end %>