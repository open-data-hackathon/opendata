<%= form_with(model: user, class: "contents") do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="my-5">
    <%= f.label :nickname %>
    <%= f.text_field :nickname, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>  
  <div class="my-5">
    <%= f.label :body %>
    <%= f.text_field :body, class: "block shadow rounded-md border border-gray-200 outline-none px-3 py-2 mt-2 w-full" %>
  </div>  
  <div class="inline">
    <%= f.submit class: "rounded-lg py-3 px-5 mb-8 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
