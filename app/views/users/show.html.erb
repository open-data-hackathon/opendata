<div class="mx-auto md:w-2/3 w-full h-full ">
  <h1 class="mx-auto md:w-auto mt-8 w-hull font-bold ">ユーザー情報</h1>
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @user %>

    <%= link_to 'Edit this user', edit_user_path(@user), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this user', user_path(@user), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
    <%= link_to 'Create Events', new_event_path, class: "ml-2 rounded-lg py-3 px-5 mb-8 bg-gray-100 inline-block font-medium" %>
  </div>
  
  <div class="inline-block ml-2 mb-8">
    <p class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" >参加予定のイベント<p>
  </div>
  <div class="inline-block ml-2 mb-8">
    <p class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" >自分が作成したイベント<p>
  </div>
  <div class="inline-block ml-2 mb-8">
    <p class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" >お気に入りしたイベント<p>
  </div>
  <div class="inline-block ml-2 mb-8">
    <p class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" >参加したイベント<p>
  </div>
  
</div>
