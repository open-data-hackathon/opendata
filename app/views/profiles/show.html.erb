<div class="mx-auto md:w-2/3 w-full h-full ">
  <h1 class="mx-auto md:w-auto mt-8 w-hull font-bold ">プロフィール</h1>
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <tr>
      <th scope="row"></th>
        <td>
          <%#= image_tag current_user.avatar.url, class: 'rounded-circle mr15', size: '50x50' %>
          <label tabindex="0" class="btn btn-ghost btn-circle avatar">
            <div class="w-10 rounded-full">
              <img src="https://placeimg.com/80/80/people" />
            </div>
          </label>
        </td>
      </tr>
    <tr>



    <%= render "users/user", user: current_user %>
    <%= link_to 'ユーザー情報編集', edit_user_path(current_user), class: "btn btn-success" %>

    <p class="my-5">
      <strong class="block font-medium mb-1"><%= User.human_attribute_name(:first_name) %></strong>
      <%= current_user.first_name %>
    </p>
    <p class="my-5">
      <strong class="block font-medium mb-1"><%= User.human_attribute_name(:last_name) %></strong>
      <%= current_user.last_name %>
    </p>
    <p class="my-5">
      <strong class="block font-medium mb-1"><%= User.human_attribute_name(:email) %></strong>
      <%= current_user.email %>
    </p>
    
    <%= link_to "プロフィール編集", edit_profile_path, class: 'btn btn-success' %>

</div>